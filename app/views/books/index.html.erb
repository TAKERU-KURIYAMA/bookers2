<div>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <h3><%= current_user.name %></h3>
  <h3><%= current_user.introduction %></h3>
  <%= link_to "Edit", edit_user_path(current_user.id) %>
</div>
<%= render 'books/new', book: @book %>
<h1>Books</h1>
<table>
 <thead>
   <tr>
    <th>
     Title
    </th>
    <th>
     Body
    </th>
    <th colspan="3"></th>
   </tr>
  </thead>
 <tbody>
<% @books.each do |book| %>
 <tr>
    <td>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    </td>
    <td>
     <%= book.body %>
    </td>

  </tr>
  
<% end %>
</tbody>
</table>