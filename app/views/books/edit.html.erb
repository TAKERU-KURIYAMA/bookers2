<html>
 <head>
    <title>Bookers2</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>
 <body>
  <main>
    <div class='container'>
      <div>
      <% if @book.errors.any? %>
       <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
        </ul>
      <% end %> 
     </div>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mb-auto">
          <h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title, class:"form-control book_title" %>
    <h4>Opinion</h4>
      <%= f.text_area :body, class:"form-control book_body"%>
    <%= f.submit 'Update Book', class:"btn btn-success" %>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
   </div>
        </div>
        </div>
      <main class="mb-auto">
    </body>
  </html>